#define CHAR_INTERLINEPSACING	2

/*!
 * \def		get_index (index)
 * \brief	Gives index to address charmap's first coordinate. Transforms lowercase letters to uppercase.
 * \param	index
 */
#define get_index(index)		((index >= 32 && index <= 96)?index-31:\
								((index >= 97 && index <= 122)?index-64:0))

