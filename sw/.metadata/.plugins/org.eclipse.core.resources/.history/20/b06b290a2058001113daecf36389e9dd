#include <stdio.h>

#include "vga_driver.h"


int main ()
{
	uint64 *frame_buffer;

	if ((frame_buffer = (uint64 *) malloc ((DISPLAY_NUM_COLUMNS * DISPLAY_NUM_ROWS) / 5 * uint64)) == NULL)
	{
		printf ("FATAL: Could not allocate memory for the frame buffer\n");
		return -1;
	}
	printf ("Frame buffer allocated at base address %x\n", frame_buffer);

	return 0;
}
